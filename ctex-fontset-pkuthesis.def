\ProvidesExplFile{ctex-fontset-pkuthesis.def}
  {2025/06/11}{2.0.0-dev}{Font set for pkuthesis, using local fonts.}

\sys_if_engine_uptex:TF
{
    \ctex_set_upmap_unicode:nnn
      { upserif }
      { fonts \\ -SourceHanSerifSC-Regular.otf }
      { fonts \\ -SourceHanSerifSC-Bold.otf }
    \ctex_set_upmap_unicode:nnn
      { upserifit }
      { fonts \\ -HYKaiTiS.ttf }
      { fonts \\ -HYKaiTiS.ttf }
    \ctex_set_upmap_unicode:nnn
      { upsans }
      { fonts \\ -SourceHanSansSC-Regular.otf }
      { fonts \\ -SourceHanSansSC-Medium.otf }
    \ctex_set_upmap_unicode:nnn
      { upsansit }
      { fonts \\ -SourceHanSansSC-Light.otf }
      { fonts \\ -SourceHanSansSC-Regular.otf }
    \ctex_set_upmap_unicode:nnn
      { upmono }
      { fonts \\ -SourceHanSansSC-Light.otf }
      { fonts \\ -SourceHanSansSC-Regular.otf }
    \ctex_set_upmap_unicode:nnn
      { upmonoit }
      { fonts \\ -HYKaiTiS.ttf }
      { fonts \\ -HYKaiTiS.ttf }

    \RequirePackage{stix2}

    \NewDocumentCommand { \__tnum_sans: } { } { \rmfamily }
    \NewDocumentCommand { \FangSong } { } { \rmfamily }
    \NewDocumentCommand { \FangSongEn } { } { \rmfamily }
    \NewDocumentCommand { \__circle_number: } { } { \rmfamily }
    \NewDocumentCommand { \KaiTi } { } { \rmfamily }
}
{
    \setCJKmainfont { -SourceHanSerifSC-Regular.otf }
      [
        Path           = fonts/,
        BoldFont       = -SourceHanSerifSC-Bold.otf,
        ItalicFont     = -HYKaiTiS.ttf,
        BoldItalicFont = -HYKaiTiS.ttf,
        Renderer       = OpenType,
      ]
    \setCJKsansfont { -SourceHanSansSC }
      [
        Path           = fonts/,
        Extension      = .otf,
        UprightFont    = *-Regular,
        BoldFont       = *-Medium,
        ItalicFont     = *-Light,
        BoldItalicFont = *-Regular,
        Renderer       = OpenType,
      ]
    \setCJKmonofont { -SourceHanSansSC-Regular.otf }
      [
        Path           = fonts/,
        BoldFont       = -SourceHanSansSC-Medium.otf,
        ItalicFont     = -HYKaiTiS.ttf,
        BoldItalicFont = -HYKaiTiS.ttf,
        Renderer       = OpenType,
      ]
    \setmainfont { -STIXTwoText }
      [
        Path           = fonts/,
        Extension      = .otf,
        UprightFont    = *-Regular,
        BoldFont       = *-Bold,
        ItalicFont     = *-Italic,
        BoldItalicFont = *-BoldItalic,
        Renderer       = OpenType,
      ]
    \setsansfont { -Inter }
      [
        Path             = fonts/,
        Extension        = .otf,
        UprightFont      = *-Regular,
        BoldFont         = *-Bold,
        ItalicFont       = *-Italic,
        BoldItalicFont   = *-BoldItalic,
        CharacterVariant = 1,
        StylisticSet     = 3,
        Renderer         = OpenType,
      ]
    \setmonofont { -JetBrainsMonoNL }
      [
        Path           = fonts/,
        Extension      = .ttf,
        UprightFont    = *-Regular,
        BoldFont       = *-Bold,
        ItalicFont     = *-Italic,
        BoldItalicFont = *-BoldItalic,
        Renderer       = OpenType,
      ]
    \newfontfamily \__tnum_sans: { -Inter-Regular.otf }
      [
        Path             = fonts/,
        Numbers          = Monospaced,
        CharacterVariant = 1,
        Renderer         = OpenType,
      ]
    \newCJKfontfamily \FangSong { -HYFangSongS.ttf }
      [
        Path     = fonts/,
        Renderer = OpenType,
      ]
    \newfontfamily \FangSongEn { -ShipporiMincho-Regular.otf }
      [
        Path     = fonts/,
        Renderer = OpenType,
      ]
    \newfontfamily \__circle_number: { -SourceHanSerifSC-Regular.otf }
      [
        Path     = fonts/,
        Renderer = OpenType,
      ]
    \newCJKfontfamily \KaiTi { -HYKaiTiS.ttf }
      [
        Path     = fonts/,
        Renderer = OpenType,
      ]
}