\ProvidesExplFile{ctex-fontset-pkuthesis.def}
  {2025/12/01}{2.0.1}{Font set for pkuthesis, using local fonts.}

\setCJKmainfont { -SourceHanSerifCN-Regular.otf }
  [
    Path           = fonts/,
    BoldFont       = -SourceHanSerifCN-Bold.otf,
    ItalicFont     = -HYKaiTiS.ttf,
    BoldItalicFont = -HYKaiTiS.ttf,
    Renderer       = OpenType,
  ]
\setCJKsansfont { -SourceHanSansCN }
  [
    Path           = fonts/,
    Extension      = .otf,
    UprightFont    = *-Regular,
    BoldFont       = *-Bold,
    ItalicFont     = *-Light,
    BoldItalicFont = *-Regular,
    Renderer       = OpenType,
  ]
\setCJKmonofont { -SourceHanSansCN-Regular.otf }
  [
    Path           = fonts/,
    BoldFont       = -SourceHanSansCN-Bold.otf,
    ItalicFont     = -HYKaiTiS.ttf,
    BoldItalicFont = -HYKaiTiS.ttf,
    Renderer       = OpenType,
  ]
\setmainfont { -STIXTwoText }
  [
    Path                = fonts/,
    Extension           = .otf,
    UprightFont         = *-Regular,
    BoldFont            = *-Bold,
    ItalicFont          = *-Italic,
    BoldItalicFont      = *-BoldItalic,
    SlantedFont         = *-Regular,
    BoldSlantedFont     = *-Bold,
    SlantedFeatures     = { FakeSlant },
    BoldSlantedFeatures = { FakeSlant },
    Renderer            = OpenType,
  ]
\setsansfont { -Inter }
  [
    Path                = fonts/,
    Extension           = .otf,
    UprightFont         = *-Regular,
    BoldFont            = *-Bold,
    ItalicFont          = *-Italic,
    BoldItalicFont      = *-BoldItalic,
    SlantedFont         = *-Regular,
    BoldSlantedFont     = *-Bold,
    SlantedFeatures     = { FakeSlant },
    BoldSlantedFeatures = { FakeSlant },
    CharacterVariant    = 1,
    StylisticSet        = 3,
    Renderer            = OpenType,
  ]
\setmonofont { -JetBrainsMonoNL }
  [
    Path                = fonts/,
    Extension           = .ttf,
    UprightFont         = *-Regular,
    BoldFont            = *-Bold,
    ItalicFont          = *-Italic,
    BoldItalicFont      = *-BoldItalic,
    SlantedFont         = *-Regular,
    BoldSlantedFont     = *-Bold,
    SlantedFeatures     = { FakeSlant },
    BoldSlantedFeatures = { FakeSlant },
    Renderer            = OpenType,
  ]
\newfontfamily \__tnum_sans: { -Inter-Regular.otf }
  [
    Path             = fonts/,
    Numbers          = Monospaced,
    CharacterVariant = 1,
    Renderer         = OpenType,
  ]
\newCJKfontfamily \__fang_song: { -HYFangSongS.ttf }
  [
    Path     = fonts/,
    Renderer = OpenType,
  ]
\newfontfamily \__fang_song_en: { -ShipporiMincho-Regular.otf }
  [
    Path     = fonts/,
    Renderer = OpenType,
  ]
\newfontfamily \__circled_number: { -SourceHanSerifCN-Regular.otf }
  [
    Path     = fonts/,
    Renderer = OpenType,
  ]
\newCJKfontfamily \__kai_ti: { -HYKaiTiS.ttf }
  [
    Path     = fonts/,
    Renderer = OpenType,
  ]
