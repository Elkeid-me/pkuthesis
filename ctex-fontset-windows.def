\ProvidesExplFile{ctex-fontset-pkuthesis.def}
  {2025/06/12}{2.0.0-dev}{Font set for pkuthesis, using Windows fonts.}

\setCJKmainfont { SimSun }
  [
    BoldFont       = SimHei,
    ItalicFont     = KaiTi,
    BoldItalicFont = KaiTi,
    Renderer       = OpenType,
  ]
\setCJKsansfont { Microsoft~YaHei }
  [
    BoldFont       = *~Bold,
    ItalicFont     = *~Light,
    BoldItalicFont = *~Light,
    Renderer       = OpenType,
  ]
\setCJKmonofont { Microsoft~YaHei }
  [
    BoldFont       = *~Bold,
    ItalicFont     = KaiTi,
    BoldItalicFont = KaiTi,
    Renderer       = OpenType,
  ]
\setmainfont { Times~New~Roman }
  [
    BoldFont       = *~Bold,
    ItalicFont     = *~Italic,
    BoldItalicFont = *~Bold~Italic,
    Renderer       = OpenType,
  ]
\setsansfont { Segoe~UI }
  [
    BoldFont       = *-Bold,
    ItalicFont     = *-Italic,
    BoldItalicFont = *-Bold~Italic,
    Renderer       = OpenType,
  ]
\setmonofont { Consolas }
  [
    BoldFont       = *~Bold,
    ItalicFont     = *~Italic,
    BoldItalicFont = *~Bold~Italic,
    Renderer       = OpenType,
  ]
\newfontfamily \__tnum_sans: { Segoe~UI }
  [
    Numbers  = Monospaced,
    Renderer = OpenType,
  ]
\newCJKfontfamily \FangSong { FangSong }
  [ Renderer = OpenType ]
\newfontfamily \FangSongEn { FangSong }
  [ Renderer = OpenType ]
\newfontfamily \__circle_number: { SimSun }
  [ Renderer = OpenType ]
\newCJKfontfamily \KaiTi { KaiTi }
  [ Renderer = OpenType ]
