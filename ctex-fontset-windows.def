\ProvidesExplFile{ctex-fontset-pkuthesis.def}
  {2025/08/28}{2.0.0}{Font set for pkuthesis, using Windows fonts.}

\setCJKmainfont { SimSun }
  [
    BoldFont       = SimHei,
    ItalicFont     = KaiTi,
    BoldItalicFont = KaiTi,
    Renderer       = OpenType,
  ]
\setCJKsansfont { Microsoft~YaHei }
  [
    BoldFont       = *~Bold,
    ItalicFont     = *~Light,
    BoldItalicFont = *~Light,
    Renderer       = OpenType,
  ]
\setCJKmonofont { Microsoft~YaHei }
  [
    BoldFont       = *~Bold,
    ItalicFont     = KaiTi,
    BoldItalicFont = KaiTi,
    Renderer       = OpenType,
  ]
\setmainfont { Times~New~Roman }
  [
    BoldFont            = *~Bold,
    ItalicFont          = *~Italic,
    BoldItalicFont      = *~Bold~Italic,
    SlantedFont         = *,
    BoldSlantedFont     = *~Bold,
    SlantedFeatures     = { FakeSlant },
    BoldSlantedFeatures = { FakeSlant },
    Renderer            = OpenType,
  ]
\setsansfont { Segoe~UI }
  [
    BoldFont            = *~Bold,
    ItalicFont          = *~Italic,
    BoldItalicFont      = *~Bold~Italic,
    SlantedFont         = *,
    BoldSlantedFont     = *~Bold,
    SlantedFeatures     = { FakeSlant },
    BoldSlantedFeatures = { FakeSlant },
    Numbers             = Proportional,
    StylisticSet        = 19,
    Renderer            = OpenType,
  ]
\setmonofont { Consolas }
  [
    BoldFont            = *~Bold,
    ItalicFont          = *~Italic,
    BoldItalicFont      = *~Bold~Italic,
    SlantedFont         = *,
    BoldSlantedFont     = *~Bold,
    SlantedFeatures     = { FakeSlant },
    BoldSlantedFeatures = { FakeSlant },
    Renderer            = OpenType,
  ]
\newfontfamily \__tnum_sans: { Segoe~UI }
  [
    Numbers  = Monospaced,
    Renderer = OpenType,
  ]
\newCJKfontfamily \__fang_song: { FangSong }
  [ Renderer = OpenType ]
\newfontfamily \__fang_song_en: { FangSong }
  [ Renderer = OpenType ]
\newfontfamily \__circled_number: { Microsoft~YaHei }
  [ Renderer = OpenType ]
\newCJKfontfamily \__kai_ti: { KaiTi }
  [ Renderer = OpenType ]
